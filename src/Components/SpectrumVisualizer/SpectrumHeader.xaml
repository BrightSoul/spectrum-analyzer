<UserControl x:Class="SpectrumAnalyzer.Components.SpectrumHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid AutomationProperties.Name="Scala delle frequenze dello spettrogramma" Margin="0 0 5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock TextAlignment="Right" Grid.Row="0" Foreground="White">15kHz</TextBlock>
            <TextBlock TextAlignment="Right" Grid.Row="2" Foreground="White">1kHz</TextBlock>
    </Grid>
</UserControl>
