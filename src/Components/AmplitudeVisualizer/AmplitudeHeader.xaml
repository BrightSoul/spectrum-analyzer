<UserControl x:Class="SpectrumAnalyzer.Components.AmplitudeHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid AutomationProperties.Name="Scala dei valori dell'ampiezza" Margin="0 30 10 0">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Right" VerticalAlignment="Top" Foreground="White">20dB</TextBlock>
        <TextBlock TextAlignment="Right" VerticalAlignment="Center" Foreground="White">0dB</TextBlock>
        <TextBlock TextAlignment="Right" VerticalAlignment="Bottom" Foreground="White">-20dB</TextBlock>
    </Grid>
</UserControl>
