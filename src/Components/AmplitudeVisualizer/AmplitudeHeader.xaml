<UserControl x:Class="Spettro.Components.AmplitudeHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid AutomationProperties.Name="Scala dei valori dell'ampiezza" Margin="0 20 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Right" Grid.Row="0" Foreground="White">0dB</TextBlock>
        <TextBlock TextAlignment="Right" Grid.Row="2" Foreground="White">-10dB</TextBlock>
        <TextBlock TextAlignment="Right" Grid.Row="4" Foreground="White">-20dB</TextBlock>
        <TextBlock TextAlignment="Right" Grid.Row="6" Foreground="White">-30dB</TextBlock>
    </Grid>
</UserControl>
